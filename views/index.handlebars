                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Size</th>
                        <th>Last modified</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="withdraw-body">
                    <tr>
                        <td>
                            <a href="{{subPath}}">name</a>
                        </td>
                        <td>type</td>
                        <td>size</td>
                        <td>lastModified</td>
                        <td>
                            <span><a><i class="fa fa-download action"></i></a>
                            <span><i data-toggle="modal" data-target="#confirm-rename"  onclick="handleEdit('{{name}}')" class="fa fa-edit action"></i>
                            <span><i data-toggle="modal" data-target="#confirm-delete"  onclick="handleDelete('{{name}}')" class="fa fa-trash action"></i>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="phone-card-box" >
            <ol class="breadcrumb" style=" margin-bottom: 0;">
                <li class="breadcrumb-item">Phone card</li>
            </ol>
            <table class="table table-hover border">
                <thead>
                    <tr>
                        <th>Provider</th>
                        <th>Code</th>
                        <th>Type</th>
                        <th>Quantity</th>
