
<h3 class="text-center my-5">Deposit</h3>
<div id="total-value" data-totalvalue="{{data.total_value}}"></div>
<!-- buộc toàn bộ dòng và cột phải bỏ trong class container -->
<div class="container w-50">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-5">
      <div class="border p-3 rounded bg-light">
        <form method="post">
          <div class="form-group font-weight-bold">
            Total value: <span class="text-success">{{data.total_value}}</span>VND
          </div>
          <div class="form-group">
            <label for="phone_receiver">Phone number of receiver</label>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="fas fa-user"></i>
                </span>
              </div>
              <input id="phone_receiver" type="text" name="phone_receiver" class="form-control" placeholder="Phone number of receiver">
            </div>
          <div class="form-group">
            <label for="name">Name of receiver</label>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="fas fa-user"></i>
                </span>
              </div>
              <input id="name" type="text" name="name" class="form-control" placeholder="Name of receiver">
            </div>
          <div class="form-group">
            <label for="money">Money</label>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="fas fa-user"></i>
                </span>
              </div>
              <input id="money" type="number" name="money" class="form-control" placeholder="Money">
            </div>

          </div>
          <div class="form-group">
            <label for="fee">Fee 5%: 50k</label>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="fas fa-user"></i>
                </span>
              </div>
              <select id="feeperson" name="feeperson">
                  <option value="sender">Sender</option>
                  <option value="receiver">Receiver</option>
              </select>
            </div>
          <div class="form-group">
            <label for="note">Note</label>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="fas fa-user"></i>
                </span>
              </div>
              <input id="note" type="text" name="note" class="form-control" placeholder="Note...">
            </div>

      
          <div class="form-group">
            <button class="btn btn-success px-5" type="submit">Deposit now</button>
          </div>
          
        </form>
      </div>
    </div>
  </div>
</div>