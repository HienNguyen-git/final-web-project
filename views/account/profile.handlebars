<div class="container">
  <div class="row mt-5">
    
    <div class="col-12 col-md-12">
      <ul class="profile-list row">
        <li class="profile-item col-12 col-md-6">
          <div class="profile-icon"><i class="fa-solid fa-user"></i></div>
          <div class="profile-body">
            <span class="profile-body__title">Họ tên </span>
            <p class="profile-body__content">{{userDetail.name}}</p>
          </div>
        </li>

        <li class="profile-item col-12 col-md-6">
          <div class="profile-icon">
            <i class="fa-solid fa-calendar"></i>
          </div>
          <div class="profile-body">
            <span class="profile-body__title">Ngày sinh </span>
            <p class="profile-body__content">{{userDetail.date_of_birth}}</p>
          </div>
        </li>
        <li class="profile-item col-12 col-md-6">
          <div class="profile-icon">
            <i class="fa-solid fa-location-dot"></i>
          </div>
          <div class="profile-body">
            <span class="profile-body__title">Địa chỉ </span>
            <p class="profile-body__content">{{userDetail.address}}</p>
          </div>
        </li>
        <li class="profile-item col-12 col-md-6">
          <div class="profile-icon"><i class="fa-solid fa-phone"></i></div>
          <div class="profile-body">
            <span class="profile-body__title">Số điện thoại </span>
            <p class="profile-body__content">{{userDetail.phone}}</p>
          </div>
        </li>
        <li class="profile-item col-12 col-md-6">
          <div class="profile-icon">
            <i class="fa-solid fa-envelope"></i>
          </div>
          <div class="profile-body">
            <span class="profile-body__title">Email </span>
            <p class="profile-body__content">{{userDetail.email}}</p>
          </div>
        </li>
        <li class="profile-item col-12 col-md-6">
          <a href="/account/resetpassword">Reset password</a>
        </li>


      </ul>
    </div>
    <div class="col-12 col-md-12 profile-image-container">
      <div class="text-center">
        {{#checkStatusIs0 userStatus}}
          <button disabled class="form-btn btn btn-primary " style="margin:8px ">
          Waiting admin approved
          </button>
        {{/checkStatusIs0}}
        
        {{#checkStatusIs3 userStatus}}
          <button class="btn btn-success" data-toggle="modal" data-target="#add-fontcmnd"
        style="margin:8px">Upload front CMND</button>
        {{/checkStatusIs3}}
    </div>
      
      <div class="row">
        
        <div class="col-12 col-md-6 mb-5 profile-image">
          <img src={{#if userDetail.font_cmnd}} "/images/{{userDetail.font_cmnd}}"
            {{else}} "https://www.nj.com/resizer/zovGSasCaR41h_yUGYHXbVTQW2A=/1280x0/smart/cloudfront-us-east-1.images.arcpublishing.com/advancelocal/SJGKVE5UNVESVCW7BBOHKQCZVE.jpg"
            {{/if}} alt="profile-image" width="100%" height="100%" />
          
           
        </div>
        <div class="col-12 col-md-6 profile-image">

          <img src={{#if userDetail.back_cmnd}} "/images/{{userDetail.back_cmnd}}"
            {{else}} "https://previews.123rf.com/images/yupiramos/yupiramos1608/yupiramos160828671/61876287-avatar-man-back-male-guy-person-wearing-casual-clothes-vector-illustration.jpg"
            {{/if}} alt="profile-image" width="100%" height="100%"/>
          {{!-- <button class="btn btn-success" data-toggle="modal" data-target="#add-backcmnd"
            style="float: right; margin-top:8px">Upload back CMND</button> --}}
        </div>
      </div>

    </div>
  </div>

  <div id="add-fontcmnd" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <hp class="modal-title">Front CMND</hp>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <form method="post" enctype="multipart/form-data">
          <div class="modal-body">

            <div class="form-group">
              <label for="customFile">Picture:</label>
              <div class="custom-file">
                <input type="file" class="custom-file-input" id="customFile" name="images" multiple>
                <label class="custom-file-label" for="customFile">Choose pictures</label>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                <div class="preview-images"></div>
              </div>
            </div>
            <div class="form-group">
              <button type="submit" class="form-btn btn btn-primary px-5" style="float: right;">
                Upload Front CMND
              </button>
             
            </div>
          </div>
        </form>

      </div>
    </div>
  </div>
  <div id="add-backcmnd" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <hp class="modal-title">Back CMND</hp>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <form method="post" action="/users/profile2" enctype="multipart/form-data">
          <div class="modal-body">

            <div class="form-group">
              <label for="customFile">Picture:</label>
              <div class="custom-file">
                <input type="file" class="custom-file-input custom-file-input2" id="customFile" name="image2">
                <label class="custom-file-label custom-file-label2" for="customFile">Choose file</label>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                <div class="preview-images"></div>
              </div>
            </div>
            <div class="form-group">

              <button type="submit" class="form-btn btn btn-primary px-5" style="float: right;">Upload Back
                CMND</button>
            </div>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>
<script>

  // Add the following code if you want the name of the file appear on select
  $(".custom-file-input").on("change", function () {
    //var fileName = $(this).val().split("\\").pop();
    var numFiles = $("input:file")[0].files.length;
    $(this).siblings(".custom-file-label").addClass("selected").html(numFiles + " pictures");
    
  });

  $(".custom-file-input2").on("change", function () {
    var fileName = $(this).val().split("\\").pop();
    $(this).siblings(".custom-file-label2").addClass("selected").html(fileName);
  });
</script>